<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Editable Input Fields with Bootstrap 4</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
    
        .input-group-append button {
            height: calc(1.5em + .75rem + 2px);
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
    </style>

    <link href="/assets/img/favicon.png" rel="icon">
    <link href="/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    
    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
        rel="stylesheet">
    
    <!-- Vendor CSS Files -->
    <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="/assets/vendor/simple-datatables/style.css" rel="stylesheet">
    
    <!-- Template Main CSS File -->
    <link href="/assets/css/style.css" rel="stylesheet">
</head>

<body>
    <form method="post" action="/editpost/<%- title %>/<%- subtitle %>">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="inputTitle">Title:</label>
                        <div class="input-group">
                            <input type="hidden" class="previous_title" name="previous_title" id="previous_title" value="<%- title %>">
                            <input type="text" class="form-control" id="inputTitle" name="inputTitle" readonly value="<%- title %>">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" id="editTitleButton"><i
                                        class="fas fa-edit"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="inputSubtitle">Subtitle:</label>
                        <div class="input-group">
                            <input type="hidden" class="previous_subtitle" name="previous_subtitle" id="previous_subtitle" value="<%- subtitle %>">
                            <input type="text" class="form-control" name="inputSubtitle" id="inputSubtitle" readonly value="<%- subtitle %>">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" id="editSubtitleButton"><i
                                        class="fas fa-edit"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <label for="inputSubtitle">Edit content:</label>
                        <textarea style="display: none;" class="tinymce-editor input-group" name="previous_content" id="previous_content">
                            <%- content %>
                        </textarea>
                        <textarea class="tinymce-editor input-group" name="content" id="content">
                            <%- content %>
                        </textarea>
                    </div>
                </div>
                <button id="myeditbutton"> Save changes! </button>
                <a href="http://localhost:3000/courses">Back to tutorials</a>
            </div>
        </div>
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    <script>
        document.getElementById('editTitleButton').addEventListener('click', function () {
            var inputTitle = document.getElementById('inputTitle');
            if (inputTitle.readOnly) {
                inputTitle.readOnly = false;
                inputTitle.classList.add('bg-light');
            } else {
                inputTitle.readOnly = true;
                inputTitle.classList.remove('bg-light');
            }
        });

        document.getElementById('editSubtitleButton').addEventListener('click', function () {
            var inputSubtitle = document.getElementById('inputSubtitle');
            if (inputSubtitle.readOnly) {
                inputSubtitle.readOnly = false;
                inputSubtitle.classList.add('bg-light');
            } else {
                inputSubtitle.readOnly = true;
                inputSubtitle.classList.remove('bg-light');
            }
        });
    </script>
</body>
<script src="/assets/vendor/apexcharts/apexcharts.min.js"></script>
<script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/assets/vendor/echarts/echarts.min.js"></script>
<script src="/js/composeBehaviour.js"></script>
<script src="/assets/vendor/quill/quill.min.js"></script>
<script src="/assets/vendor/simple-datatables/simple-datatables.js"></script>
<script src="/assets/vendor/tinymce/tinymce.min.js"></script>
<script src="/assets/vendor/php-email-form/validate.js"></script>

<!-- Template Main JS File -->
<script src="/assets/js/main.js"></script>

</html>