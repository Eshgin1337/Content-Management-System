<main id="main" class="main" style="padding-top: 2%;">
    <div class="container mt-5" id="maincontent">
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">System Users</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered verticle-middle" >
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Role</th>
                                    <th scope="col" style="text-align: center;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var index = 1; users.forEach(user => { %>
                                    <tr >
                                        <td><%= index %> </td>
                                        <td><span class="sr-only">
                                                    <%- user.email  %> 
                                                </span>
                                            </div>
                                        </td>
                                        <td><%- user.username %></td>
                                        <td><span><%- user.role %></span>
                                        </td>
                                        <td style="text-align: center;">
                                            <span>
                                                <button 
                                                    data-toggle="tooltip" 
                                                    data-placement="top" 
                                                    title="Edit" 
                                                    name="<%- user.email %>"
                                                    id="<%- user.email %>"
                                                    style="text-decoration: none; background: none; border: none"
                                                    onclick="editUser('<%- user.username %>')"
                                                >
                                                    <i class="bi bi-pencil-fill"></i>
                                                </button> or
                                                <button 
                                                    data-toggle="tooltip" 
                                                    data-placement="top" 
                                                    title="Remove" 
                                                    name="<%- user.email %>"
                                                    id="<%- user.email %>"
                                                    style="text-decoration: none; background: none; border: none"
                                                    onclick="deleteUser('<%- user.email %>')"
                                                >
                                                    <i class="bi bi-x-lg" style="color:red; height: 10px; width: 10px;"></i>
                                                </button>
                                            </span>
                                        </td>
                                    </tr>
                                    <% index++; }) %>
                            </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
