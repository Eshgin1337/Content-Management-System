<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Compose</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Google Fonts -->
  <link href="https://fonts.gstatic.com" rel="preconnect">
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="/assets/vendor/quill/quill.snow.css" rel="stylesheet">
  <link href="/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
  <link href="/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="/assets/vendor/simple-datatables/style.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="/assets/css/style.css" rel="stylesheet">

</head>
  <body>
   
    <section name="compose" id="compose" style="padding-top: 7%; padding-bottom: 7%; background-color: #bcbcbd;">
      <div class="container-fluid col-lg-8 rounded" style="background-color: white; padding-bottom: 2%;">
        <form class="container row g-3" action="/compose" method="post">
          <input type="hidden" name="course" id="course" value="<%= course %>">
          <!-- Radio button selection -->
          <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <strong>Something went wrong!</strong> <%= error %> 
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
          <fieldset class="row mb-3" style="padding-top: 2%;">
            <div class="col-sm-10">
              <% if (headings !== null) { %>
                <legend class="col-form-label col-sm-2 pt-0">Title you add is: </legend>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="existence" id="new" value="new"
                      onclick="javascript:existenceCheck(1);">
                    <label class="form-check-label" for="new">
                      New
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="existence" id="existing" value="existing"
                      onclick="javascript:existenceCheck(1);">
                    <label class="form-check-label" for="existing">
                      Existing
                    </label>
                  </div>
              <% }%>
            </div>
          </fieldset>
  
          <!-- Type Title: -->
  
          <div class="mb-3" id="addheading" style="display: block;">
            <label for="heading" class="form-label">Create heading:</label>
            <input type="text" 
              class="form-control" 
              type="text" 
              placeholder="Type heading" 
              aria-label=".form-control-lg example" 
              name="heading" 
              id="heading"
            >
          </div>
  
          <!-- Select heading -->
  
          <div class="mb-3" style="display: none;" id="selectheading">
            <label for="selectHeading" class="form-label">Select heading:</label>
            <% if (headings !==null) { %>
              <select class="form-select" aria-label="Default select example" id="selectHeading" name="selectHeading">
                <% headings.forEach(element=> { %>
                  <option value="<%- element %>"><%- element %></option>
                  <% }) %>
              </select>
            <% } %>

          </div> <hr>
  
          <!-- Create subtitle or add new subtitle -->
  
          <div class="mb-3">
            <label for="subtitle" class="form-label" id="titleLebel">Subtitle:</label>
            <input type="text" class="form-control form-control" type="text" placeholder="Type Subtitle" name="subtitle" id="subtitle">
          </div> <hr>
          <div class="mb-3">
            <label for="content" class="form-label">Enter content:</label>
            <textarea class="tinymce-editor" name="content" id="content" style="height: 100px;">
            
            </textarea>
          </div>
          
          <button class="btn btn-primary" type="submit" name="button">Publish</button>
          <a href="http://localhost:3000">Back to tutorials</a>
        </div>
      </form>
    </section>

      
  <script src="/assets/vendor/apexcharts/apexcharts.min.js"></script>
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/vendor/echarts/echarts.min.js"></script>
  <script src="/assets/vendor/quill/quill.min.js"></script>
  <script src="/assets/vendor/simple-datatables/simple-datatables.js"></script>
  <script src="/assets/vendor/tinymce/tinymce.min.js"></script>
  <script src="/assets/vendor/php-email-form/validate.js"></script>
  
  <!-- Template Main JS File -->
  <script src="/js/composeBehaviour.js"></script>
  <script src="/assets/js/main.js"></script>
  
  </body>
  
</html>
